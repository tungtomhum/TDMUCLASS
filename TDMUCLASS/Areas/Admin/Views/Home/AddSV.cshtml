@model TDMUCLASS.Models.SINHVIEN

@{
    ViewBag.Title = "AddSV";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutHome.cshtml";
}



<main id="main" class="main">

    <div class="pagetitle">
        <h1>THÊM SINH VIÊN</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/Admin/Home/Home">Admin</a></li>
                <li class="breadcrumb-item">Home</li>
                <li class="breadcrumb-item">Danh sách sinh viên</li>
                <li class="breadcrumb-item active">Thêm Sinh viên</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body p-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">THÔNG TIN SINH VIÊN</h5>

                                <!-- Floating Labels Form -->
                                <form class="row g-3 m-4" action="@Url.Action("AddSV", "Home")" method="post">
                                    <div class="col-md-4">
                                        <div class="form-floating">
                                            <input type="number" class="form-control" id="masv" name="fMaSV" placeholder="Mã sinh viên" required>
                                            <label for="masv">Mã sinh viên <b style="color:red; font-size: 10px;">(*)</b></label>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-floating mb-3">
                                            <select class="form-select" id="chuyennganh" aria-label="Chuyên ngành" name="fChuyenNganh" required>
                                                <option value="0"></option>
                                                <option value="CNTT">CNTT</option>
                                                <option value="KET">KET</option>
                                                <option value="QTDN">QTDN</option>
                                                <option value="OTO">OTO</option>
                                            </select>
                                            <label for="chuyennganh">Chuyên ngành <b style="color:red; font-size: 10px;">(*)</b></label>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-floating mb-3">
                                            <select class="form-select" id="lop" aria-label="Lớp" name="fLop" required>
                                                <option value="0"></option>
                                                <option value="D21CNTT01">D21CNTT01</option>
                                                <option value="D21CNTT02">D21CNTT02</option>
                                                <option value="D21CNTT03">D21CNTT03</option>
                                                <option value="D21KET01">D21KET01</option>
                                                <option value="D21KET02">D21KET02</option>
                                                <option value="D21KET03">D21KET03</option>
                                                <option value="D21QTDN01">D21QTDN01</option>
                                                <option value="D21QTDN02">D21QTDN02</option>
                                                <option value="D21QTDN03">D21QTDN03</option>
                                                <option value="D21OTO01">D21OTO01</option>
                                                <option value="D21OTO02">D21OTO02</option>
                                                <option value="D21OTO03">D21OTO03</option>
                                            </select>
                                            <label for="lop">Lớp <b style="color:red; font-size: 10px;">(*)</b></label>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-floating">
                                            <input type="text" class="form-control" id="hoten" placeholder="Họ tên sinh viên" name="fHoTen" required>
                                            <label for="hoten">Họ tên sinh viên <b style="color:red; font-size: 10px;">(*)</b></label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-floating">
                                            <input type="date" class="form-control" id="ngaysinh" placeholder="Ngày sinh" name="fNgaySinh" required>
                                            <label for="ngaysinh">Ngày sinh <b style="color:red; font-size: 10px;">(*)</b></label>
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="form-floating">
                                            <input type="email" class="form-control" id="email" placeholder="Email" name="fEmail" required>
                                            <label for="email">Email <b style="color:red; font-size: 10px;">(*)</b></label>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-floating">
                                            <input type="tel" class="form-control" id="sdt" placeholder="Số điện thoại" name="fSDT" required>
                                            <label for="sdt">Số điện thoại <b style="color:red; font-size: 10px;">(*)</b></label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating">
                                            <textarea class="form-control" placeholder="Địa chỉ" id="floatingTextarea" name="fDiaChi" style="height: 100px;" required></textarea>
                                            <label for="floatingTextarea">Địa chỉ <b style="color:red; font-size: 10px;">(*)</b></label>
                                        </div>
                                    </div>
                                    <div class="col-12 text-center">
                                        <a href="~/Admin/Home/QLSinhVien" type="reset" class="btn btn-secondary">Hủy</a>
                                        <button type="submit" class="btn btn-primary">THÊM</button>
                                    </div>
                                </form><!-- End floating Labels Form -->

                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </section>
</main><!-- End #main -->
<script>
    // Chọn các phần tử DOM cần sử dụng
    var chuyenNganhSelect = document.getElementById('chuyennganh');
    var lopSelect = document.getElementById('lop');

    // Mảng chứa danh sách lớp theo chuyên ngành
    var lopData = {
        'CNTT': ['D21CNTT01', 'D21CNTT02', 'D21CNTT03'],
        'KET': ['D21KET01', 'D21KET02', 'D21KET03'],
        'QTDN': ['D21QTDN01', 'D21QTDN02', 'D21QTDN03'],
        'OTO': ['D21OTO01', 'D21OTO02', 'D21OTO03']
    };

    // Sự kiện khi chọn chuyên ngành
    chuyenNganhSelect.addEventListener('change', function () {
        // Lấy giá trị của chuyên ngành được chọn
        var selectedChuyenNganh = chuyenNganhSelect.value;

        // Xóa tất cả các option trong select lớp
        lopSelect.innerHTML = '<option value="0"></option>';

        // Nếu chuyên ngành được chọn tồn tại trong mảng dữ liệu
        if (lopData.hasOwnProperty(selectedChuyenNganh)) {
            // Lặp qua danh sách lớp của chuyên ngành và thêm vào select lớp
            lopData[selectedChuyenNganh].forEach(function (lop) {
                var option = document.createElement('option');
                option.value = lop;
                option.textContent = lop;
                lopSelect.appendChild(option);
            });
        }
    });
</script>
